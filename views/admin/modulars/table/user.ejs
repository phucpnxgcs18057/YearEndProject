<div class="table-responsive"
data-toggle="lists"
data-lists-sort-by="js-lists-values-name"
data-lists-values='["js-lists-values-name", 
                    "js-lists-values-user", 
                    "js-lists-values-type", 
                    "js-lists-values-school", 
                    "js-lists-values-earnings"]'>

