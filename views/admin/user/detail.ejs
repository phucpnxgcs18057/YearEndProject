    >
      <div class="mdk-drawer-layout__content page-content">
        <!-- Header -->

        <!-- Navbar -->

        <%- include("../modulars/navbar/navbar.ejs") %>

        <!-- // END Navbar -->

        <!-- // END Header -->

        <div class="pt-32pt">
          <div class="container page__container d-flex flex-column flex-md-row align-items-center text-center text-sm-left">
            <div class="flex d-flex flex-column flex-sm-row align-items-center">
              <div class="mb-24pt mb-sm-0 mr-sm-24pt">
                <h1 class="mb-0">
                  User Detail
                </h1>
              </div>
            </div>
          </div>
          <div class="container page__container d-flex flex-column flex-md-row align-items-center     text-center text-sm-left">
            <a href="/users/view" type="button" class="btn btn-success">
              <i class="material-icons">keyboard_return</i>
              <span style="padding-left: 10px;">Back</span>
            </a>
          </div>
        </div>

        <!-- BEFORE Page Content -->

        <!-- // END BEFORE Page Content -->

        <!-- Page Content -->

        <div class="page-section bg-white border-bottom-2">
          <div class="container page__container d-flex flex-column flex-md-row align-items-center     text-center text-md-left">
            <div class="flex mb-32pt mb-md-0">
              <h2 class="text-black mb-0">
                <%=user.user_full_name%>
              </h2>
              <p class="lead text-black-50 d-flex align-items-center">
                Create Date: <%=user.create_date.toLocaleDateString()%>
                <br>
                Last Update: <%=user.last_update.toLocaleDateString()%>  
              </p>
            </div>
            <a href="/users/edit?userId=<%= user._id %>" type="button" class="btn btn-warning">
              <i class="material-icons">build</i>
              <span style="padding-left: 10px;">Edit</span>
            </a>
          </div>
        </div>

        <div class="page-section bg-white border-bottom-2">
          <div class="container page__container">
            <div class="row">
              <div class="col-md-6">
                <h4>
                  User Name
                </h4>
                <p>
                  <%=user.user_full_name%>
                </p>
              </div>
              <div class="col-md-6">
                <h4>
                  User Email
                </h4>
                <p>
                  <%=user.user_email%>
                </p>
              </div>
            </div>
          </div>
        </div>

        <div class="page-section bg-white border-bottom-2">
          <div class="container page__container">
            <div class="row">
              <div class="col-md-6">
                <h4>
                  User Type
                </h4>
                <p>
                  <%=user.type.user_type%>
                </p>
              </div>
              <div class="col-md-6">
                <h4>
                  Saved Resource(s):
                </h4>
                <p>
                  Resources Here
                </p>
              </div>
            </div>
          </div>
        </div>

        <div class="d-flex flex-column flex-sm-row align-items-center justify-content-start">
          
        </div>
        <!-- // END Page Content -->

        <!-- Footer -->

        <%- include("../modulars/footer.ejs") %>

        <!-- // END Footer -->
      </div>

      <!-- // END drawer-layout__content -->

      <!-- drawer -->

      <div
        class="mdk-drawer js-mdk-drawer layout-compact__drawer"
        id="default-drawer"
      >
        <div
          class="mdk-drawer__content js-sidebar-mini"
          data-responsive-width="992px"
          data-layout="compact"
        >
          <%- include("../modulars/navbar/rnav.ejs") %> 
        </div>
      </div>

      <!-- // END drawer -->
    </div>

